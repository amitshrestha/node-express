    display: block;
    border-radius: 0 0 4px 4px;
    /* margin-top: -1px; */
    /* border: 1px #ddd solid; */
    background-color: #fff;
    /* width: 840px; */
    /* min-height: 200px; */
    position: relative;
    /* padding: 14px 18px; */
}
.o_title, .o_value{
	font-size: 11px!important;
  line-height: 1.465!important;
}
.o_date, .o_item_total, .o_shipping_charge, .o_total, .o_address{
	  margin-right: 2%;
